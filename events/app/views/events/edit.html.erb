<h1>Edit Event</h1>
    <form action="/events/:id" method="post">
      <input type="hidden" name="_method" value="patch">
      <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
      <input type="hidden" id="Host" name="event[host]" value='<%= current_user.first_name %>'>
      <input type='hidden' name='user_id' value='<%= current_user.id %>'>
      <input type='hidden' name='host' value='<%= current_user.first_name %>'>
      <input type='hidden' name='event_id' value='<%= @event.id %>'>
      <p>
        <label for="name">Name</label>
        <input type="text" id="Name" name="event[name]" value="<%= @event.name %>">
      </p>

      <p>
        <label for="description">Description</label>
        <input type="text" id="Description" name="event[description]" value="<%= @event.description %>">
      </p>

      <p>
        <label for="date">Date</label>
        <input type="date" id="Date" name="event[date]" value="<%= @event.date %>">
      </p>

      <p>
        <label for="location">Location</label>
        <input type="text" id="Email" name="event[location]" value="<%= @event.location %>">
      </p

      <br> 
      <input type="submit" value='Add Event'>
    </form>